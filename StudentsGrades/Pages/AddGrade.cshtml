@page
@model StudentsGrades.Pages.AddGradeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Выставить оценку</title>
</head>
<body>
    <form asp-action="AddGrade" method="post">
        <p>
            <label asp-for="GradeItem.Name">Имя студента: </label>
            <input asp-for="GradeItem.Name" />
        </p>
        <p>
            <label asp-for="GradeItem.Subject">Предмет: </label>
            <input asp-for="GradeItem.Subject" />
        </p>
        <p>
            <label asp-for="GradeItem.Grade">Оценка: </label>
            <input asp-for="GradeItem.Grade" />
        </p>
        <button type="submit">Выставить оценку</button>
    </form>

    <hr />
    <div class="footer">
        <a class="btn btn-primary" asp-page="Index">Вернуться на главную</a>
    </div>
</body>
</html>