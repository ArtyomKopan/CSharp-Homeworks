@page
@model StudentsGrades.Pages.GradesListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список оценок</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="row mb-3 text-center">
        <h2 class="col-sm-6">Список оценок:</h2>
    </div>
    <div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Студент</th>
                    <th>Предмет</th>
                    <th>Оценка</th>
                </tr>
            </thead>
            <tbody>
                @foreach (StudentsGrades.Data.GradeItem p in Model.Grades)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Subject</td>
                        <td>@p.Grade</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <br />
        <a class="btn btn-primary" asp-page="Index">Вернуться на главную</a>
    </div>
</body>
</html>
